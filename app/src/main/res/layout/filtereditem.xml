<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:padding="8dp"
        android:id="@+id/imageURL"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_cancel"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/movieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bat Man Returns"
        android:textColor="#212121"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignTop="@+id/imageURL"
        android:layout_toRightOf="@+id/imageURL"
        android:layout_toEndOf="@+id/imageURL" />

    <TextView
        android:textColor="#212121"
        android:layout_gravity="center_vertical"
        android:id="@+id/movieYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="2015-15-16"
        android:layout_below="@+id/movieTitle"
        android:layout_toRightOf="@+id/imageURL"/>

    <TextView
        android:textColor="#212121"
        android:layout_gravity="center_vertical"
        android:id="@+id/movieType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movie"
        android:layout_below="@+id/movieYear"
        android:layout_toRightOf="@+id/imageURL"
        android:layout_marginTop="15dp"
        />
    <View
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#666666"
        android:layout_below="@+id/imageURL"/>

    <RatingBar
        android:id="@+id/MyRating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/divider"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="10dp"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="0.5" />
</RelativeLayout>