<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Password"
        android:textSize="40sp"

        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:id="@+id/title" />
    <RelativeLayout
        android:id="@+id/OriginalPasswordLayout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_marginTop="12dp"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password: "
                android:textSize="22sp"
                android:id="@+id/OriginalPasswordLabel"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text=""
                android:inputType="textPassword"
                android:id="@+id/oldPassText"
                android:hint="@string/old_password"
                android:layout_below="@+id/OriginalPasswordLabel"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                style="@style/HelloDarknessEditText"
                android:paddingLeft="12dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/verifyPasswordLayout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OriginalPasswordLayout"
        android:layout_alignStart="@+id/OriginalPasswordLayout"
        android:layout_marginTop="10dp">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="New:"
                android:textSize="22sp"
                android:id="@+id/emailLabel"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:visibility="visible"
            android:inputType="textPassword"
            android:id="@+id/newPassText"
            android:hint="@string/new_password"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/emailLabel"
            android:layout_marginTop="5dp"
            style="@style/HelloDarknessEditText"
            android:paddingLeft="12dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/newPasswordLayout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verifyPasswordLayout"
        android:layout_alignStart="@+id/verifyPasswordLayout"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="Verify:"
            android:id="@+id/displayPass"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:visibility="visible"
            android:inputType="textPassword"
            android:id="@+id/newPassVerifyText"
            android:hint="@string/new_password"
            android:layout_below="@+id/displayPass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            style="@style/HelloDarknessEditText"
            android:paddingLeft="12dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/newPasswordLayout"
        android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/submitBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingRight="40dp"
                android:paddingLeft="40dp"
                android:text="Submit"
                android:onClick="submitButtonPressed"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingRight="40dp"
                android:paddingLeft="40dp"
                android:text="Cancel"
                android:onClick="cancelButtonPressed"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

    </RelativeLayout>


</RelativeLayout>